<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.esame.citoroberto.CursorView
        android:id="@+id/cursorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:icon="@drawable/outline_arrow_drop_up_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="48dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cursorView" />

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:icon="@drawable/outline_arrow_left_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="48dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:layout_constraintEnd_toStartOf="@id/btnDown"
        app:layout_constraintTop_toBottomOf="@id/btnUp" />

    <Button
        android:id="@+id/btnDown"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:icon="@drawable/outline_arrow_drop_down_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="48dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUp" />

    <Button
        android:id="@+id/btnRight"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:icon="@drawable/outline_arrow_right_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="48dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:layout_constraintStart_toEndOf="@id/btnDown"
        app:layout_constraintTop_toBottomOf="@id/btnUp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnDown" />

</androidx.constraintlayout.widget.ConstraintLayout>